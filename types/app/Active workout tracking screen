// app/(tabs)/active-workout.tsx - Active workout tracking screen

import React, { useState, useEffect } from 'react'
import {
  View,
  Text,
  ScrollView,
  TouchableOpacity,
  TextInput,
  Alert,
  Vibration,
} from 'react-native'
import { useDispatch, useSelector } from 'react-redux'
import { router } from 'expo-router'
import {
  logSet,
  addSet,
  removeSet,
  nextExercise,
  previousExercise,
  completeWorkout,
  cancelWorkout,
  tickRestTimer,
  pauseRestTimer,
  resumeRestTimer,
  stopRestTimer,
  adjustRestTimer,
} from '@/state/slices/workoutSlice'

export default function ActiveWorkoutScreen() {
  const dispatch = useDispatch()
  const { activeWorkout, activeExerciseIndex, restTimer, preferences } = useSelector(
    (state: any) => state.workout
  )

  const [startTime] = useState(Date.now())
  const [elapsedTime, setElapsedTime] = useState(0)

  // Timer for elapsed workout time
  useEffect(() => {
    const interval = setInterval(() => {
      setElapsedTime(Math.floor((Date.now() - startTime) / 1000))
    }, 1000)
    return () => clearInterval(interval)
  }, [startTime])

  // Rest timer countdown
  useEffect(() => {
    if (restTimer.isActive && !restTimer.isPaused) {
      const interval = setInterval(() => {
        dispatch(tickRestTimer())
        
        // Vibrate and notify when timer completes
        if (restTimer.remaining === 1) {
          if (preferences.vibrationEnabled) {
            Vibration.vibrate([0, 500, 200, 500])
          }
        }
      }, 1000)
      return () => clearInterval(interval)
    }
  }, [restTimer.isActive, restTimer.isPaused, restTimer.remaining, dispatch])

  if (!activeWorkout) {
    return (
      <View className="flex-1 bg-dark-900 items-center justify-center p-6">
        <Text className="text-dark-50 text-xl font-bold mb-4">No Active Workout</Text>
        <Text className="text-dark-700 text-center mb-6">
          Start a workout to begin tracking your exercises
        </Text>
        <TouchableOpacity
          onPress={() => router.push('/workouts')}
          className="bg-primary-500 px-6 py-3 rounded-lg"
        >
          <Text className="text-white font-semibold">Browse Workouts</Text>
        </TouchableOpacity>
      </View>
    )
  }

  const currentExercise = activeWorkout.exercises[activeExerciseIndex]
  const progress = ((activeExerciseIndex + 1) / activeWorkout.exercises.length) * 100

  const formatTime = (seconds: number) => {
    const mins = Math.floor(seconds / 60)
    const secs = seconds % 60
    return `${mins}:${secs.toString().padStart(2, '0')}`
  }

  const handleCompleteWorkout = () => {
    Alert.alert(
      'Complete Workout',
      'Are you sure you want to finish this workout?',
      [
        { text: 'Cancel', style: 'cancel' },
        {
          text: 'Complete',
          onPress: () => {
            dispatch(completeWorkout({
              duration: elapsedTime,
              notes: activeWorkout.notes,
            }))
            router.push('/(tabs)')
          },
        },
      ]
    )
  }

  const handleCancelWorkout = () => {
    Alert.alert(
      'Cancel Workout',
      'Are you sure? Your progress will be lost.',
      [
        { text: 'Keep Going', style: 'cancel' },
        {
          text: 'Cancel Workout',
          style: 'destructive',
          onPress: () => {
            dispatch(cancelWorkout())
            router.push('/(tabs)')
          },
        },
      ]
    )
  }

  return (
    <View className="flex-1 bg-dark-900">
      {/* Header */}
      <View className="bg-dark-700 px-6 py-4 border-b border-dark-50">
        <View className="flex-row justify-between items-center mb-3">
          <Text className="text-dark-50 text-2xl font-bold">
            {activeWorkout.name}
          </Text>
          <TouchableOpacity onPress={handleCancelWorkout}>
            <Text className="text-red-500 font-semibold">Cancel</Text>
          </TouchableOpacity>
        </View>
        
        <View className="flex-row justify-between items-center">
          <Text className="text-dark-700 text-sm">
            Exercise {activeExerciseIndex + 1} of {activeWorkout.exercises.length}
          </Text>
          <Text className="text-primary-500 font-semibold">
            {formatTime(elapsedTime)}
          </Text>
        </View>
        
        {/* Progress bar */}
        <View className="mt-3 h-2 bg-dark-50 rounded-full overflow-hidden">
          <View 
            className="h-full bg-primary-500"
            style={{ width: `${progress}%` }}
          />
        </View>
      </View>

      <ScrollView className="flex-1 p-6">
        {/* Current Exercise */}
        <View className="bg-dark-700 rounded-2xl p-6 mb-6">
          <Text className="text-dark-50 text-2xl font-bold mb-2">
            {currentExercise.exercise?.name || 'Exercise'}
          </Text>
          
          {currentExercise.exercise?.muscleGroups && (
            <View className="flex-row flex-wrap gap-2 mb-4">
              {currentExercise.exercise.muscleGroups.map((muscle) => (
                <View key={muscle} className="bg-primary-500/20 px-3 py-1 rounded-full">
                  <Text className="text-primary-500 text-xs font-semibold capitalize">
                    {muscle}
                  </Text>
                </View>
              ))}
            </View>
          )}
          
          {currentExercise.notes && (
            <Text className="text-dark-700 mb-4">{currentExercise.notes}</Text>
          )}
        </View>

        {/* Sets */}
        <View className="mb-6">
          <Text className="text-dark-50 text-lg font-bold mb-4">Sets</Text>
          
          {currentExercise.sets.map((set, index) => (
            <SetRow
              key={set.id}
              set={set}
              setIndex={index}
              exerciseIndex={activeExerciseIndex}
              weightUnit={preferences.weightUnit}
            />
          ))}
          
          <TouchableOpacity
            onPress={() => dispatch(addSet(activeExerciseIndex))}
            className="bg-dark-700 rounded-xl p-4 items-center border-2 border-dashed border-dark-50"
          >
            <Text className="text-primary-500 font-semibold">+ Add Set</Text>
          </TouchableOpacity>
        </View>

        {/* Navigation */}
        <View className="flex-row gap-3 mb-6">
          {activeExerciseIndex > 0 && (
            <TouchableOpacity
              onPress={() => dispatch(previousExercise())}
              className="flex-1 bg-dark-700 rounded-xl p-4 items-center"
            >
              <Text className="text-dark-50 font-semibold">← Previous</Text>
            </TouchableOpacity>
          )}
          
          {activeExerciseIndex < activeWorkout.exercises.length - 1 ? (
            <TouchableOpacity
              onPress={() => dispatch(nextExercise())}
              className="flex-1 bg-primary-500 rounded-xl p-4 items-center"
            >
              <Text className="text-white font-semibold">Next Exercise →</Text>
            </TouchableOpacity>
          ) : (
            <TouchableOpacity
              onPress={handleCompleteWorkout}
              className="flex-1 bg-primary-500 rounded-xl p-4 items-center"
            >
              <Text className="text-white font-semibold">Finish Workout ✓</Text>
            </TouchableOpacity>
          )}
        </View>
      </ScrollView>

      {/* Rest Timer Overlay */}
      {restTimer.isActive && (
        <RestTimerOverlay
          timer={restTimer}
          onPause={() => dispatch(pauseRestTimer())}
          onResume={() => dispatch(resumeRestTimer())}
          onStop={() => dispatch(stopRestTimer())}
          onAdjust={(seconds) => dispatch(adjustRestTimer(seconds))}
        />
      )}
    </View>
  )
}

// Set Row Component
function SetRow({ set, setIndex, exerciseIndex, weightUnit }: any) {
  const dispatch = useDispatch()
  const [weight, setWeight] = useState(set.actualWeight?.toString() || '')
  const [reps, setReps] = useState(set.actualReps?.toString() || '')

  const handleComplete = () => {
    dispatch(logSet({
      exerciseIndex,
      setIndex,
      data: {
        actualWeight: weight ? parseFloat(weight) : undefined,
        actualReps: reps ? parseInt(reps) : undefined,
      },
    }))
  }

  return (
    <View className={`bg-dark-700 rounded-xl p-4 mb-3 ${set.completed ? 'opacity-70' : ''}`}>
      <View className="flex-row items-center justify-between mb-3">
        <Text className="text-dark-50 font-bold">Set {set.setNumber}</Text>
        {set.type !== 'working' && (
          <View className="bg-primary-500/20 px-2 py-1 rounded">
            <Text className="text-primary-500 text-xs font-semibold capitalize">
              {set.type}
            </Text>
          </View>
        )}
      </View>

      <View className="flex-row gap-3 mb-3">
        <View className="flex-1">
          <Text className="text-dark-700 text-xs mb-1">Weight ({weightUnit})</Text>
          <TextInput
            value={weight}
            onChangeText={setWeight}
            keyboardType="decimal-pad"
            placeholder={set.targetWeight?.toString() || '0'}
            placeholderTextColor="#6B7280"
            className="bg-dark-900 text-dark-50 rounded-lg px-4 py-3 font-semibold"
            editable={!set.completed}
          />
        </View>
        
        <View className="flex-1">
          <Text className="text-dark-700 text-xs mb-1">Reps</Text>
          <TextInput
            value={reps}
            onChangeText={setReps}
            keyboardType="number-pad"
            placeholder={set.targetReps?.toString() || '0'}
            placeholderTextColor="#6B7280"
            className="bg-dark-900 text-dark-50 rounded-lg px-4 py-3 font-semibold"
            editable={!set.completed}
          />
        </View>
      </View>

      {!set.completed ? (
        <TouchableOpacity
          onPress={handleComplete}
          className="bg-primary-500 rounded-lg py-3 items-center"
        >
          <Text className="text-white font-semibold">Complete Set</Text>
        </TouchableOpacity>
      ) : (
        <View className="bg-primary-500/20 rounded-lg py-3 items-center">
          <Text className="text-primary-500 font-semibold">✓ Completed</Text>
        </View>
      )}
    </View>
  )
}

// Rest Timer Overlay
function RestTimerOverlay({ timer, onPause, onResume, onStop, onAdjust }: any) {
  const formatTime = (seconds: number) => {
    const mins = Math.floor(seconds / 60)
    const secs = seconds % 60
    return `${mins}:${secs.toString().padStart(2, '0')}`
  }

  return (
    <View className="absolute bottom-0 left-0 right-0 bg-dark-700 border-t-4 border-primary-500 p-6">
      <Text className="text-dark-700 text-sm text-center mb-2">REST TIMER</Text>
      <Text className="text-dark-50 text-5xl font-bold text-center mb-4">
        {formatTime(timer.remaining)}
      </Text>
      
      <View className="flex-row gap-3 mb-3">
        <TouchableOpacity
          onPress={() => onAdjust(-15)}
          className="flex-1 bg-dark-900 rounded-lg py-3 items-center"
        >
          <Text className="text-dark-50 font-semibold">-15s</Text>
        </TouchableOpacity>
        
        <TouchableOpacity
          onPress={timer.isPaused ? onResume : onPause}
          className="flex-1 bg-primary-500 rounded-lg py-3 items-center"
        >
          <Text className="text-white font-semibold">
            {timer.isPaused ? 'Resume' : 'Pause'}
          </Text>
        </TouchableOpacity>
        
        <TouchableOpacity
          onPress={() => onAdjust(15)}
          className="flex-1 bg-dark-900 rounded-lg py-3 items-center"
        >
          <Text className="text-dark-50 font-semibold">+15s</Text>
        </TouchableOpacity>
      </View>
      
      <TouchableOpacity
        onPress={onStop}
        className="bg-red-500/20 rounded-lg py-3 items-center"
      >
        <Text className="text-red-500 font-semibold">Skip Rest</Text>
      </TouchableOpacity>
    </View>
  )
}
